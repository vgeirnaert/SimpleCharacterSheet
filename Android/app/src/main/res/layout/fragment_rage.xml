<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/available_powers_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/rage_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rage"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/rage_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_item" />

        <TextView
            android:id="@+id/available_powers_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#ff9900"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/list_vertical_margin"
            android:paddingBottom="@dimen/list_vertical_margin" />
    </LinearLayout>
    
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="#999" />
    
   <ListView
       android:id="@+id/rage_list"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_gravity="start"
       android:choiceMode="none"
       android:clickable="true"
       android:divider="#666"
       android:dividerHeight="2dp"
       android:longClickable="true" />

</LinearLayout>
